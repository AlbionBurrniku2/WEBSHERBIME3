@{
}
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Postets" asp-action="Index" class="login-form">
            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input placeholder="Enter email" name="email" type="email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input placeholder="Enter password" name="Password" type="password" class="form-control" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>